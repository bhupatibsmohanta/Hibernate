<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping>
    	<class name="com.lit.hibernate.Student" table="student">
    		<id name="roll" column="sroll" type="int">					<!-- inside id tag automatically Primary Key -->
    			<generator class="increment"></generator>
    		
    		</id>
    		<property name="name" column="sname" type="s b bnn b bntring"></property>
    	    <property name="cgpa" type="double"></property>
    		<property name="fees" column="sfees" type="long"></property>
    	</class>
    </hibernate-mapping>